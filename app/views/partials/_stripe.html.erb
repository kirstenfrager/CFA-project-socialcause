<%= form_tag charges_path do %>

  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <!-- <label class="amount">
      <span><%#= @photograph.auction.current_bid %></span>
    </label> -->
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-description="Payment for: <%= @photograph.title %> by <%= @photograph.author %> "
    data-amount="<%= @photograph.auction.current_bid * 100 %>"
    data-locale="auto">
  </script>

<% end %>
